<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/forbackground"
        tools:context=".LoginPage">
    <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="313dp"
            android:layout_height="71dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:textColorHint="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:hint="USERNAME"
                android:textColorHint="@android:color/white"
                android:textColorLink="@android:color/holo_blue_dark" android:id="@+id/loginpage_txt_Uname"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout8"
            android:layout_width="313dp"
            android:layout_height="69dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="272dp"

            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:hint="PASSWORD"
            android:textColorHint="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:passwordToggleContentDescription="description"
            app:passwordToggleDrawable="@drawable/icon"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#ffffff">


        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:inputType="textPassword"
                android:shadowColor="@color/gradient2"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textColorHint="@android:color/black"
                android:textColorLink="#5daeae" android:id="@+id/loginpage_txt_password"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.button.MaterialButton
            android:id="@+id/login_btn_SignUp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Sign Up"
            android:textColor="#5daeae"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintHorizontal_bias="0.48"/>

    <Button
            android:id="@+id/loginpage_btn_login"
            android:layout_width="115dp"
            android:layout_height="32dp"
            android:layout_marginStart="121dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="138dp"
            android:background="@drawable/roundbtn"
            android:text="LogIn"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout8"/>

    <ImageView
            android:id="@+id/imageView14"
            android:layout_width="456dp"
            android:layout_height="331dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/flogo" />
</android.support.constraint.ConstraintLayout>